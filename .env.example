# Fabrik-Codek Configuration
# Copy to .env and customize

# =============================================================================
# LLM Configuration (Ollama)
# =============================================================================
FABRIK_OLLAMA_HOST=http://localhost:11434
FABRIK_DEFAULT_MODEL=qwen2.5-coder:7b
FABRIK_FALLBACK_MODEL=qwen2.5-coder:32b
FABRIK_EMBEDDING_MODEL=nomic-embed-text

# =============================================================================
# Generation Parameters
# =============================================================================
FABRIK_TEMPERATURE=0.1
FABRIK_MAX_TOKENS=4096
FABRIK_CONTEXT_WINDOW=32768

# =============================================================================
# API Server
# =============================================================================
FABRIK_API_HOST=127.0.0.1
FABRIK_API_PORT=8420
# FABRIK_API_KEY=your-secret-key  # Uncomment to enable API key auth
# FABRIK_API_CORS_ORIGINS=["http://localhost:3000"]  # Default: ["*"]

# =============================================================================
# Data & Storage
# =============================================================================
# FABRIK_DATALAKE_PATH=./data  # Default: ./data (relative to project root)
FABRIK_VECTOR_DB=lancedb
FABRIK_COLLECTION_NAME=fabrik_knowledge

# =============================================================================
# Flywheel (Data Collection)
# =============================================================================
FABRIK_FLYWHEEL_ENABLED=true
FABRIK_FLYWHEEL_AUTO_CAPTURE=true
FABRIK_FLYWHEEL_BATCH_SIZE=100

# =============================================================================
# Knowledge Graph
# =============================================================================
# FABRIK_PROJECT_FILTER=  # Filter transcript dirs by project name (optional)
# FABRIK_GRAPH_VECTOR_WEIGHT=0.6
# FABRIK_GRAPH_GRAPH_WEIGHT=0.4

# =============================================================================
# Task Routing
# =============================================================================
FABRIK_CONFIDENCE_THRESHOLD=0.7
FABRIK_ESCALATION_THRESHOLD=0.5

# =============================================================================
# Logging
# =============================================================================
FABRIK_LOG_LEVEL=INFO
FABRIK_LOG_FORMAT=console  # console or json
